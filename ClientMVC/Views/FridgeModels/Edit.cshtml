@model FridgeModelDTO
@{
    ViewData["Title"] = "Edit Fridge Model";
}

<h4>Create Fridge Model</h4>

<form asp-antiforgery="true" asp-action="Edit" asp-controller="FridgeModels" asp-route-id=@Model.Id>
    <div>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Name"></label><br />
            <input type="text" asp-for="Name" value=@Model.Name />
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Year"></label><br />
            <input type="number" asp-for="Year" value=@Model?.Year/>
            <span asp-validation-for="Year"></span>
        </div>
        <div>
            <input type="submit" value="Edit" />
        </div>
    </div>
</form>

<a asp-action="Index" asp-controller="FridgeModels">Go back</a>