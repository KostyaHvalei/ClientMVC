@model ClientMVC.ViewModels.ProductToAddInFridgeViewModel

@{
    ViewData["Title"] = "Add product in fridge";
}

<h3>Add product</h3>

<form asp-antiforgery="true" asp-action="AddProductInFridge" asp-controller="Fridges" asp-route-fridgeId=@Model.FridgeId.ToString()>
    <div>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="productId">Product: </label>
            <select name="productId" class="form-control" asp-for="productId" class="form-control">
                @foreach (var prod in Model.Products)
                {
                    <option value="@prod.Id">@prod.Name</option>
                }
            </select>
        </div>
        

        <div>
            <label asp-for="Quantity"></label><br />
            <input type="number" asp-for="Quantity" value=@Model.Quantity />
            <span asp-validation-for="Quantity"></span>
        </div>
        
        <input type="submit" value="Add" />
    </div>
    
</form>